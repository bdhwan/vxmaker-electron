{
    "name": "vxmaker-angular",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "start": "concurrently \"ng serve\" \"electron src/electron/electron.live.js\" \"node src/imageserver/server.js\"",
        "build": "ng build --environment=prod",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "build-guide": "ng build --environment=guide --base-href ./ && rm -rf dist/assets/data && rm -rf guide_template && rm -rf src/electron/template/guide_template && mv dist guide_template && cp src/index-guide.html guide_template/index.html && cp -r guide_template src/electron/template/guide_template && rm -rf guide_template",
        "build-electron": "ng build --base-href ./ --environment=prod && cp -r src/electron/* dist/",
        "electron": "npm run build-electron --environment=prod && electron dist/",
        "build-angular": "ng build --base-href ./ && cp -r src/electron/* dist/",
        "deploy": "npm run build-guide && npm run build-electron && ls && cd dist && ls && electron-packager . --asar --platform=win32 --electron-version=1.6.8 && zip -r win32.zip angular-electron-win32-x64 && node ../deploy.js  --base-href ./",
        "pack": "npm run build-guide && npm run build-electron && ls && cd dist && ls && electron-packager . --asar --platform=win32 --electron-version=1.6.8"
    },
    "private": true,
    "dependencies": {
        "@angular/common": "^4.0.0",
        "@angular/compiler": "^4.0.0",
        "@angular/core": "^4.0.0",
        "@angular/forms": "^4.0.0",
        "@angular/http": "^4.0.0",
        "@angular/platform-browser": "^4.0.0",
        "@angular/platform-browser-dynamic": "^4.0.0",
        "@angular/router": "^4.0.0",
        "@ng-bootstrap/ng-bootstrap": "^1.0.0-beta.5",
        "angular2-tree-component": "^3.1.0",
        "angular2-uuid": "^1.1.1",
        "bodymovin": "^4.6.10",
        "bootstrap": "^4.0.0-beta",
        "core-js": "^2.4.1",
        "font-awesome": "^4.7.0",
        "image-size": "^0.5.1",
        "js-beautify": "^1.6.14",
        "ng2-clip": "^1.0.1",
        "ng2-handy-syntax-highlighter": "^1.0.9",
        "ngx-color-picker": "^4.4.0",
        "node-sass": "^4.5.3",
        "rasterizehtml": "^1.2.4",
        "rxjs": "^5.1.0",
        "zone.js": "^0.8.4"
    },
    "devDependencies": {
        "@angular/cli": "1.4.9",
        "@angular/compiler-cli": "^4.2.4",
        "@types/jasmine": "2.5.38",
        "@types/node": "~6.0.60",
        "asar": "^0.14.0",
        "codelyzer": "~2.0.0",
        "electron-installer-squirrel-windows": "^1.3.0",
        "electron-packager": "^9.1.0",
        "ftp-deploy": "^1.2.2",
        "jasmine-core": "~2.5.2",
        "jasmine-spec-reporter": "~3.2.0",
        "karma": "~1.4.1",
        "karma-chrome-launcher": "~2.0.0",
        "karma-cli": "~1.0.1",
        "karma-coverage-istanbul-reporter": "^0.2.0",
        "karma-jasmine": "~1.1.0",
        "karma-jasmine-html-reporter": "^0.2.2",
        "protractor": "~5.1.0",
        "ts-node": "~2.0.0",
        "tslint": "~4.5.0",
        "typescript": "~2.2.0"
    }
}
